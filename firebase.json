{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "site": "leetcode500",
    "public": ".",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      "firestore.rules",
      "**/.*",
      "**/node_modules/**",
      "convert.py",
      "DSA_500_Problems_Roadmap.xlsx",
      "admin-upload.html",
      "upload-data.mjs",
      "data.json",
      "package.json",
      "package-lock.json",
      "nul",
      "LINKEDIN_POST.md"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=300"
          }
        ]
      },
      {
        "source": "**/*.css",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=300"
          }
        ]
      }
    ]
  }
}
